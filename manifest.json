{
  "manifest_version": 2,

  "name": "XNova bot",
  "description": "This extension demonstrates the power of human above the machines",
  "version": "0.2",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "permissions": [
    "tabs",
    "bookmarks",
    "background",
    "http://uni1.xnova-online.com/"
  ],

  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://uni1.xnova-online.com/planet*"],
      "css": ["styles.css"],
      "js": [
          "jquery-2.0.0.js",
          "jcookie.js",
          "jstorage.js",
          "Logger.js",
          "Engine.js",
          "Resources.js",
          "Building.js",
          "BuildQueue.js",
          "ControlPanel.js",
          "myscript.js"
      ]
    }
  ]
}